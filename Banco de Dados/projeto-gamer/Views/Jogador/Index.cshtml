@model Jogador
<link rel="stylesheet" href="~/css/jogadores.css" asp-append-version="true">
@{
    ViewData["Title"] = "Jogador";
}

@* <h1>Tela de Jogadores</h1> *@
@if (ViewBag.Username == null)
{
    <a class="nav-brand" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
}
else
{


    <!-- MAIN -->
    <main>

        <section class="container-grid cadastro-equipes">


            <form method="post" action="@Url.Action("Cadastrar")" enctype="multipart/form-data" class="frm-cad-equipe">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Jogadores</h1>
                    <hr>
                </div>

                @* <input class="campo-entrada" type="number" id="id-equipe" placeholder="Digite o Id da sua equipe:">
            <input class="campo-entrada" type="text" id="nome-equipe" placeholder="Digite o nome da sua equipe:"> *@

                <select class="campo-entrada" id="equipe-select" name="IdEquipe">
                    <option value="0">Selecione uma opcao</option>
                    @foreach (var item in ViewBag.Equipe)
                    {
                        <option value="@item.IdEquipe">@item.Nome</option>
                    }
                </select>

                <input class="campo-entrada" type="text" id="nome-jogador" placeholder="Digite o nome do Jogador:"
                    name="Nome" required>
                <input class="campo-entrada" type="email" id="email-jogador" placeholder="Digite o email do Jogador:"
                    name="Email" required>
                <input class="campo-entrada" type="password" id="senha" placeholder="Digite a senha:" name="Senha" required>
                <button type="submit">Cadastrar</button>




            </form>

            <!-- TABELA CADASTRO DE EQUIPES -->

            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>&spades;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Jogador jogador in ViewBag.Jogador)
                    {
                        <tr>
                            <td>@jogador.IdJogador</td>
                            <td>@jogador.Nome</td>
                            <td>@jogador.Email</td>
                            <td>
                                <a asp-area="" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@jogador.IdJogador">
                                    <img class="yellow-trash" src="~/assets/trash.png" alt="">
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </main>





@model Jogador

@{
    ViewData["Title"] = "Jogador";
}

<h1>Tela de Jogadores</h1>

<form method="post" action="@Url.Action("Cadastrar")" enctype="multipart/form-data">
    <label for="">Nome</label>
    <input type="text" name="Nome" required>

    <label for="">Email</label>
    <input type="email" name="Email" required>

    <label for="">Senha</label>
    <input type="password" name="Senha" required>

    <label for="">Equipe</label>
    @* <input type="text" name="IdEquipe" required> *@
    <select name="IdEquipe" id="">
        <option value="0">Selecione uma opcao</option>
        @foreach (var item in ViewBag.Equipe)
        {
            <option value="@item.IdEquipe">@item.Nome</option>            
        }
    </select>

    <button type="submit">Cadastrar</button>
</form>














<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Equipe</th>
        <th>Ações</th>
    </thead>

    <tbody>
        @foreach (Jogador jogador in ViewBag.Jogador)
        {
            <tr>
                <td>@jogador.IdJogador</td>
                <td>@jogador.Nome</td>
                <td>@jogador.Email</td>
                <td><img src="/img/Equipes/@jogador.Equipe.Imagem" alt="Imagem da equipe @jogador.Equipe.Imagem" width="50px"></td>
                <td>
                    <a asp-area="" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@jogador.IdJogador">Excluir</a>
                    <a asp-area="" asp-controller="Jogador" asp-action="Edit" asp-route-id="@jogador.IdJogador">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>